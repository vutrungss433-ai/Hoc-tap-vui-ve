        }
        
        // To√°n 5
        function drawGraph() {
            const canvas = document.getElementById('toan5-canvas');
            const ctx = canvas.getContext('2d');
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.beginPath();
            for (let x = 0; x < canvas.width; x++) {
                const y = (x - 150) ** 2 / 100 + 100; // y = x¬≤ scaled
                ctx.lineTo(x, y);
            }
            ctx.stroke();
            document.getElementById('toan5-result').textContent = 'ƒê·ªì th·ªã v·∫Ω xong! üìä';
            updateScore(15);
        }
        
        // L√Ω 1
        let gravityClicks = 0;
        function simulateGravity() {
            gravityClicks++;
            const speed = gravityClicks * 9.8;
            document.getElementById('ly1-result').textContent = `S·ªë l·∫ßn nh·∫•p: ${gravityClicks} (T·ªëc ƒë·ªô r∆°i: ${speed.toFixed(1)} m/s)`;
            updateScore(5);
        }
        
        // L√Ω 2
        function quizLy2(choice) {
            const result = document.getElementById('ly2-result');
            if (choice === 'Newton') {
                result.textContent = 'ƒê√∫ng! ‚ö°';
                result.className = 'correct';
                updateScore(10);
            } else {
                result.textContent = 'Sai!';
                result.className = 'wrong';
            }
        }
        
        // L√Ω 3
        function puzzleLy3(choice) {
            const result = document.getElementById('ly3-result');
            if (choice === 'C√≥ t·ª´ tr∆∞·ªùng') {
                result.textContent = 'ƒê√∫ng! üß≤';
                result.className = 'correct';
