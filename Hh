        // Tin 5
        function sortArray() {
            let arr = [3, 1, 4, 1, 5];
            arr.sort((a, b) => a - b);
            document.getElementById('tin5-array').textContent = `[${arr.join(',')}]`;
            document.getElementById('tin5-result').textContent = 'S·∫Øp x·∫øp xong! üî¢';
            updateScore(15);
        }
