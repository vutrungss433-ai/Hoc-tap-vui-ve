    <script>
        let score = 0;
        const scoreElement = document.getElementById('score');
        
        function updateScore(points) {
            score += points;
            scoreElement.textContent = score;
        }
        
        // To√°n 1
        function checkToan1() {
            const answer = document.getElementById('toan1-answer').value;
            const result = document.getElementById('toan1-result');
            if (answer == 5) {
                result.textContent = 'ƒê√∫ng! üéâ';
                result.className = 'correct';
                updateScore(10);
            } else {
                result.textContent = 'Sai, th·ª≠ l·∫°i!';
                result.className = 'wrong';
            }
        }
        
        // To√°n 2
        function quizToan2(choice) {
            const result = document.getElementById('toan2-result');
            if (choice === 16) {
                result.textContent = 'ƒê√∫ng! üìê';
                result.className = 'correct';
                updateScore(10);
            } else {
                result.textContent = 'Sai!';
                result.className = 'wrong';
            }
        }
        
        // To√°n 3
        function checkToan3() {
            const answer = document.getElementById('toan3-answer').value;
            const result = document.getElementById('toan3-result');
            if (answer === '1,2,3') {
                result.textContent = 'ƒê√∫ng! üß©';
