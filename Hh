        // L√Ω 5
        function startPendulum() {
            const canvas = document.getElementById('ly5-canvas');
            const ctx = canvas.getContext('2d');
            let angle = 0;
            const interval = setInterval(() => {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                const x = 150 + 100 * Math.sin(angle);
                const y = 50 + 100 * Math.cos(angle);
                ctx.beginPath();
                ctx.moveTo(150, 50);
                ctx.lineTo(x, y);
                ctx.arc(x, y, 10, 0, 2 * Math.PI);
                ctx.stroke();
                ctx.fill();
                angle += 0.1;
                if (angle > 2 * Math.PI) clearInterval(interval);
            }, 50);
            document.getElementById('ly5-result').textContent = 'Dao ƒë·ªông xong! üï∞Ô∏è';
            updateScore(15);
        }
        
        // Tin 1
        function checkTin1() {
            const answer = document.getElementById('tin1-answer').value;
            const result = document.getElementById('tin1-result');
            if (answer === 'Hello World') {
                result.textContent = 'ƒê√∫ng! M√£ ch·∫°y th√†nh c√¥ng. üíª';
                result.className = 'correct';
                updateScore(10);
            } else {
                result.textContent = 'Sai!';
                result.className = 'wrong';
            }
        }
        
        // Tin 2
